<?xml version="1.0" encoding="utf-8"?>
<animated-selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item
        android:id="@+id/arrow"
        android:drawable="@drawable/drawer_arrow"
        android:state_checked="true"/>

    <item
        android:id="@+id/hamburger"
        android:drawable="@drawable/drawer_hamburger"/>

    <transition
        android:drawable="@drawable/drawer_hamburger_to_arrow"
        android:fromId="@id/hamburger"
        android:toId="@id/arrow"/>

    <transition
        android:drawable="@drawable/drawer_arrow_to_hamburger"
        android:fromId="@id/arrow"
        android:toId="@id/hamburger"/>

</animated-selector>